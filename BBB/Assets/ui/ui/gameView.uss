/* 공통: 기본 테마 테두리 제거 + 모양 */
Button#button_buy,
.unity-button#button_buy,
Button#button_sell,
.unity-button#button_sell {
  width: 100px;
  height: 25px;
  border-radius: 8px;
  font-size: 15px;

  border-width: 1px;                 /* 테두리 두께(호버 때 보임) */
  border-color: transparent;         /* 기본은 숨김 */
  background-image: none;            /* 테마 배경 제거 */
  -unity-background-image-tint-color: transparent;
}

/* 기본 색상 (채움 버튼) */
Button#button_buy,
.unity-button#button_buy {
  background-color: rgb(231, 76, 60);    /* 붉은색 */
  color: rgb(255, 255, 255);
}
Button#button_sell,
.unity-button#button_sell {
  background-color: rgb(41, 128, 185);   /* 파란색 */
  color: rgb(255, 255, 255);
}

/* Hover: 배경을 옅게, 테두리/글자는 원래 배경색으로 */
Button#button_buy:hover,
.unity-button#button_buy:hover {
  background-color: rgb(244, 130, 118);  /* buy hover(조금 밝게) */
  border-color:   rgb(231, 76, 60);
}

Button#button_sell:hover,
.unity-button#button_sell:hover {
  background-color: rgb(93, 165, 212);   /* sell hover(조금 밝게) */
  border-color:   rgb(41, 128, 185);
}

/* Active(클릭 중): 더 진하게 */
Button#button_buy:active,
.unity-button#button_buy:active {
  background-color: rgb(192, 57, 43);    /* buy active(진하게) */
  border-color:     rgb(192, 57, 43);
  color:            rgb(255, 255, 255);  /* 눌렀을 땐 가독성 위해 다시 흰색 */
}
Button#button_sell:active,
.unity-button#button_sell:active {
  background-color: rgb(31, 97, 141);    /* sell active(진하게) */
  border-color:     rgb(31, 97, 141);
  color:            rgb(255, 255, 255);
}

/* Focus: 포커스 링 대신 테두리만 표시(선택사항) */
Button#button_buy:focus,
.unity-button#button_buy:focus {
  border-color: rgb(231, 76, 60);
}
Button#button_sell:focus,
.unity-button#button_sell:focus {
  border-color: rgb(41, 128, 185);
}

/* Disabled(선택): 흐리게 */
Button#button_buy:disabled,
.unity-button#button_buy:disabled,
Button#button_sell:disabled,
.unity-button#button_sell:disabled {
  opacity: 0.5;
}


