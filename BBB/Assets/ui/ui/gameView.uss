/*ScrollView 안의 스크롤러 UI 감추기 */
.unity-scroller { display: none; }
.unity-slider   { display: none; }
/* 화살표 버튼 숨김 */
.unity-scroller__low-button { display: none; }
.unity-scroller__high-button { display: none; }

/* UI Toolkit 버전별 입력 텍스트 선택자 모두 대응 */
#input_qty .unity-text-field__input,
#input_qty .unity-base-text-field__input,
#input_qty .unity-text-input,
#input_qty TextElement {
    -unity-text-align: middle-center; /* 좌측 정렬 */
    padding-left: 0;                /* 좌측 여백 제거 */
    padding-right: 0;
    margin-left: 0;
    margin-right: 0;
}

/* 런타임 테마가 .unity-button을 주입하므로 특이성 올려서 확실히 덮기 */
Button.btn-plain,
.unity-button {
  border-width: 0;
  border-left-width: 0;
  border-right-width: 0;
  border-top-width: 0;
  border-bottom-width: 0;

  border-color: transparent;
  background-color: transparent;     /* 배경색도 제거 */
  background-image: none;            /* 스프라이트 테마 사용 시 */
  -unity-background-image-tint-color: transparent;

}

/* 호버/액티브/포커스 상태에서도 변화 없게 */
Button.btn-plain:hover,
.unity-button.btn-plain:hover,
Button.btn-plain:active,
.unity-button.btn-plain:active,
Button.btn-plain:focus,
.unity-button.btn-plain:focus {
  border-width: 0;
  border-color: transparent;
  background-color: transparent;
}

/* 비활성화도 동일하게(선택) */
Button.btn-plain:disabled,
.unity-button.btn-plain:disabled {
  opacity: 1;                 /* 기본 반투명화 방지하려면 */
}


